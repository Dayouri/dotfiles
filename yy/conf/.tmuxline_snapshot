# This tmux statusbar config was created by tmuxline.vim
# on mar., 15 juin 2021

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour15,bg=colour243"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour68"
set -g status-style "none,bg=colour237"
set -g message-style "fg=colour15,bg=colour243"
set -g pane-border-style "fg=colour243"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=colour68,bg=colour237"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour15,bg=colour237"
set -g status-left "#[fg=colour15,bg=colour68] #(whoami)@#H #[fg=colour68,bg=colour243,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour243] #(pwd) #[fg=colour243,bg=colour237,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour237] #(cd #{pane_current_path}; git rev-parse --abbrev-ref HEAD) #[fg=colour237,bg=colour237,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour237,bg=colour237,nobold,nounderscore,noitalics]#[fg=colour243,bg=colour237,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour243] %d-%m-%y  %R #[fg=colour243,bg=colour243,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour243] #(~/yy/bin/battery -t) "
setw -g window-status-format "#[fg=colour237,bg=colour237,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=colour237,bg=colour237,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour237,bg=colour243,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour243] #I  #W #[fg=colour243,bg=colour237,nobold,nounderscore,noitalics]"
